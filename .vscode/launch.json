  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Core Launch (console)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build demo",
      "program": "${workspaceFolder}/Tests/Piovra.Tests/bin/Debug/net7.0/Piovra.Tests.exe",
      "args": [],
      "cwd": "${workspaceFolder}/Tests/Piovra.Tests",
      "console": "internalConsole",
      "stopAtEntry": false,
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickProcess}"
    }
  ]
}